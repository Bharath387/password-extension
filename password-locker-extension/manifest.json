{
    "manifest_version": 3,
    "name": "Auto Password Filler",
    "description": "Stores username and password, autofill when the webpage is matched.",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  